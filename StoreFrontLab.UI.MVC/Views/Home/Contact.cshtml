@model StoreFrontLab.UI.MVC.Models.ContactViewModel

@{

                ViewBag.Title = "Contact";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="page-heading about-page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Contact Us</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div id="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3102.703263622521!2d-94.72245958255617!3d38.95360690000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0eb35f7a5b3ad%3A0xed186152e65a4b5d!2sThe%20LEGO%C2%AE%20Store%20Oak%20Park!5e0!3m2!1sen!2sus!4v1648405632311!5m2!1sen!2sus" width="100%" height="400px" frameborder="0" style="border:0" allowfullscreen></iframe>
                        <!-- You can simply copy and paste "Embed a map" code from Google Maps for any location. -->

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="section-heading">
                        <h2>Say Hello. Don't Be Shy!</h2>
                    </div>
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <fieldset>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "contact", @placeholder = "Name" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-6">
                                <fieldset>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = " contact", @placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12 mt-3">
                                <fieldset>
                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "contact", @placeholder = "Subject" } })
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12 mt-3">
                                <fieldset>
                                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "contact", @placeholder = "Message" } })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12 contact-us">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
