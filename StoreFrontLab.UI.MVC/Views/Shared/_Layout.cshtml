<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <title>Hexashop Ecommerce HTML CSS Template</title>


    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/font-awesome.css">

    <link rel="stylesheet" href="~/Content/assets/css/templatemo-hexashop.css">

    <link rel="stylesheet" href="~/Content/assets/css/owl-carousel.css">

    <link rel="stylesheet" href="~/Content/assets/css/lightbox.css">

    <link rel="stylesheet" href="~/Content/assets/Custom.css" />

    <!--Font Awesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />
    <!--

    TemplateMo 571 Hexashop

    https://templatemo.com/tm-571-hexashop

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container" id="navcontainer">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="@Url.Action("Index","Home")" class="logo">
                            <img src="~/Content/assets/images/StoreFrontLogoV2.png">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="@Url.Action("Index","Home")">Home</a></li>
                            <li><a href="@Url.Action("Index", "Products")">Products</a></li>
                            <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                            <li>
                                @{
                                    Dictionary<int, StoreFrontLab.UI.MVC.Models.CartItemViewModel> products =
                                        (Dictionary<int, StoreFrontLab.UI.MVC.Models.CartItemViewModel>)Session["cart"];
                                }

                                @if (Session["cart"] != null && ((Dictionary<int, StoreFrontLab.UI.MVC.Models.CartItemViewModel>)Session["cart"]).Count > 0)
                                {
                                    var productCount = products.Sum(p => p.Value.Qty);

                                    <a href="/ShoppingCart/Index">
                                        Cart<i class="fa fa-shopping-cart"></i>
                                        <sup style="
                                                    color: white;
                                                    background-color: #9C95C7;
                                                    border-radius: 50%;
                                                    display: inline-block;
                                                    height: .75em;
                                                    padding: .75em;
                                                    text-align: center;">
                                            @productCount

                                        </sup>
                                    </a>
                                }
                                else
                                {
                                    @Html.ActionLink("Cart", "Index", "ShoppingCart")
                                }
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li><a href="@Url.Action("Index", "Employees")">Employees</a></li>
                            }
                            @Html.Partial("_LoginPartial")

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="submenu">
                                    <a href="javascript:;">Admin</a>
                                    <ul>
                                        <li><a href="@Url.Action("Index","UsersAdmin")">Users Admin</a></li>
                                        <li><a href="@Url.Action("Index","RolesAdmin")">Roles Admin</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <main>
        @RenderBody()
    </main>
    <!-- ***** Footer Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="first-item">
                        <div class="logo">
                            Retired Bricks
                        </div>
                        <ul>
                            <li><a href="#">11149 W 95th St Space 18A, Overland Park, KS 66214</a></li>
                            <li><a href="#">RetiredBricks@company.com</a></li>
                            <li><a href="#">855-648-9467</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <h4>Shopping &amp; Categories</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Products")">All Products</a></li>
                        <li><a href="@Url.Action("Index", "Products", new { searchFilter = "Full Set"})">Full Sets</a></li>
                        <li><a href="@Url.Action("Index", "Products", new { searchFilter = "Mini Figure"})">Mini Figures</a></li>
                        <li><a href="@Url.Action("Index", "Products", new { searchFilter = "Loose Bricks"})">Bricks</a></li>
                        <li><a href="@Url.Action("Index", "Products", new { searchFilter = "Storage"})">Storage</a></li>
                        <li><a href="@Url.Action("Index", "Products", new { searchFilter = "Display"})">Display</a></li>
                        <li><a href="@Url.Action("Index", "Products", new { searchFilter = "Accessory"})">Accessories</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">Homepage</a></li>
                        <li><a href="@Url.Action("Contact","Home")">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h4>Help &amp; Information</h4>
                    <ul>
                        <li><a href="#">Help</a></li>
                        <li><a href="#">FAQ's</a></li>
                        <li><a href="#">Shipping</a></li>
                        <li><a href="#">Tracking ID</a></li>
                    </ul>
                </div>
                <div class="col-lg-12">
                    <div class="under-footer">
                        <p>
                            Copyright © 2022 Retired Bricks All Rights Reserved.

                            <br>Design: Austin Wallace

                            <br>Template: <a href="https://templatemo.com" target="_parent" title="free css templates">TemplateMo</a>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- jQuery -->
    <script src="~/Content/assets/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Content/assets/js/popper.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/accordions.js"></script>
    <script src="~/Content/assets/js/datepicker.js"></script>
    <script src="~/Content/assets/js/scrollreveal.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/imgfix.min.js"></script>
    <script src="~/Content/assets/js/slick.js"></script>
    <script src="~/Content/assets/js/lightbox.js"></script>
    <script src="~/Content/assets/js/isotope.js"></script>

    <!-- Global Init -->
    <script src="~/Content/assets/js/custom.js"></script>

    <!-- Added jQueryUI CDN -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- Added jQuery AJAX CDN -->
    <script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>

    <script>

        $(function () {
            var selectedClass = "";
            $("p").click(function () {
                selectedClass = $(this).attr("data-rel");
                $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("." + selectedClass).fadeOut();
                setTimeout(function () {
                    $("." + selectedClass).fadeIn();
                    $("#portfolio").fadeTo(50, 1);
                }, 500);

            });
        });

    </script>
    @RenderSection("scripts", false)
</body>
</html>